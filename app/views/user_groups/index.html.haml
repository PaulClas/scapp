- content_for :heading do
  = t('user_groups.index.user_groups')

- breadcrumb :user_groups

%table.table
  %tr
    %th Name
    %th Description
    %th Visibility
    %th
    %th
    %th

  - @user_groups.each do |user_group|
    %tr
      %td= user_group.name
