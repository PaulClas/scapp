= simple_form_for(@variable_field) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :unit
    = f.input :higher_is_better
    = f.input :is_numeric
    = f.association :user
    = f.association :variable_field_category

  .form-actions
    = f.button :submit
